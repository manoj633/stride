{
  "name": "stride",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend server for Stride",
  "main": "index.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\" ",
    "data:import": "node backend/seeder.js",
    "data:destroy": "node backend/seeder.js -d",
    "build": "npm install && cd ./frontend && npm install",
    "generate-reports": "node backend/scripts/triggerWeeklyReports.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manoj633/stride.git"
  },
  "author": "Manoj M",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/manoj633/stride/issues"
  },
  "homepage": "https://github.com/manoj633/stride#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "chartjs-node-canvas": "^5.0.0",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "dotenv": "^16.4.5",
    "nodemon": "^3.1.7"
  }
}